{
    "version": 2,
    "buildCommand": "pnpm turbo run build --filter=@shop-wise/web && cp -r apps/web/dist/* ./",
    "outputDirectory": ".",
    "installCommand": "pnpm install",
    "framework": null,
    "regions": ["gru1"],
    "functions": {
        "apps/api/api/index.js": {
            "runtime": "nodejs20.x"
        }
    },
    "env": {
        "SERVERLESS": "true"
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/apps/api/api/index.js"
        }
    ]
}
