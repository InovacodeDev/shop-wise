{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        ".env"
    ],
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                "build/**"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "start": {
            "dependsOn": [
                "build"
            ]
        },
        "lint": {},
        "test": {
            "dependsOn": [
                "^build"
            ]
        },
        "clean": {
            "cache": false
        }
    }
}